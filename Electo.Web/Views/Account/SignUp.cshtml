@model Electo.PL.Models.SignUp
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign Up</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/plu/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/plu/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/plu/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="signup-page">
    <div class="signup-box">
        <div class="logo">
            <a href="javascript:void(0);">Sign Up</a>
        </div>
        <div class="card">
            <div class="body">
                <form asp-controller="Account" asp-action="SignUp" method="post">
                    <div class="msg">Sign Up a new membership</div>
                    <div asp-validation-summary="All" class="text-danger"></div>

                    @*UserName*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div  class="form-line">
                            <input type="text" class="form-control"
                            placeholder="User Name" asp-for ="UserName">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="UserName"> </span>
                        </div>
                    </div>
                    @*Email*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div  class="form-line">
                            <input type="email" class="form-control"
                            placeholder="Email" asp-for ="Email">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="Email"> </span>
                        </div>
                    </div>
                    @*Adress*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">home</i>
                        </span>
                        <div class="form-line">
                            <input type="text" class="form-control"
                             placeholder="Adress" 
                            asp-for ="Adress">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="Adress"> </span>
                        </div>
                    </div>
                    @*phone*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">phone</i>
                        </span>
                        <div class="form-line">
                            <input type="phone" class="form-control"
                             placeholder="phone" 
                            asp-for ="phone">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="phone"> </span>
                        </div>
                    </div>   
                    @*Password*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control"
                             placeholder="Password" 
                            asp-for ="Password">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="Password"> </span>
                        </div>
                    </div>
                    @*ConfirmPassword*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" 
                             placeholder="Confirm Password"
                            asp-for ="ConfirmPassword">
                        </div>
                        <div class ="">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>
                        </div>
                    </div>

                    <button class="btn btn-block btn-lg bg-pink waves-effect" 
                    type="submit">SIGN UP</button>
                    <div class="m-t-25 m-b--5 align-center">
                        <a asp-action="SignIn" asp-controller ="Account">
                            You already have a membership? </a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/plu/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/plu/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/plu/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/plu/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom Js -->
    <script src="~/js/admin.js"></script>
    <script src="~/js/pages/examples/sign-in.js"></script>
</body>
</html>